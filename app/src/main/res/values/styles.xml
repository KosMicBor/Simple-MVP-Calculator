<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn_color_stile" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/royal_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_color_stile_advanced" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@android:color/holo_red_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="resultframe_frame_standard" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/frame_for_texts</item>
    </style>

    <style name="resultframe_frame_advanced" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/frame_for_texts_advanced</item>
    </style>

    <style name="btn_main_style">
        <item name="android:textSize">@dimen/middle_font_size</item>
        <item name="android:layout_marginEnd">@dimen/buttons_left_margin</item>
    </style>

    <style name="btn_main_style_last_btn">
        <item name="android:textSize">@dimen/middle_font_size</item>
    </style>

    <style name="btn_main_style_landscape">
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">@dimen/middle_font_size</item>
        <item name="android:layout_marginEnd">@dimen/buttons_left_margin</item>
    </style>

    <style name="btn_main_style_landscape_last_btn">
        <item name="android:layout_height">@dimen/btn_height_landscape</item>
        <item name="android:textSize">@dimen/middle_font_size</item>
    </style>

    <style name="window_title_style" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>